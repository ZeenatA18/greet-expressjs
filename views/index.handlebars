            </ul>
        </nav>
        <form action="/greetings" method="POST">
            <h1>Greet</h1>

            <div class="name">
                <h3>Name:</h3>
                <input type="text" name="text" class="NameEntered" value="" placeholder="Please Enter Name Here">
            </div>

            <div class="lingo">
                <div class="eng">
                    <input type="radio" name="language" value="eng" class="radio" class="engRadio">
                    <h4>English</h4>
                </div>
                <div class="afr">
                    <input type="radio" name="language" value="afr" class="radio" class="afrRadio">
                    <h4>Afrikaans</h4>
                </div>
                <div class="isi">
                    <input type="radio" name="language" value="isi" class="radio" class="isiRadio">
                    <h4>isiXhosa</h4>
                </div>
            </div>

            <div class="flex">
                <div class="btn">
                    <button class="button" type="submit" name="Greet_Me" value="Greet Me">Greet Me</button>
                </div>

                <div class="resets">
                    <div class="counter">
                        <h1>‚è∞ {{count}}</h1>
                    </div>
                    <div class="btn2">
                        <button class="reset" type="submit" name="Counter" value="Greet Me">Reset {{reset}}</button>
                    </div>
                </div>
            </div>

            <div class="message">
                <h2>  {{msg}}</h2>
            </div>
            <div class="message1">
              <h2>   {{msgs}}</h2>

            </div>

    </div>
    </form>

